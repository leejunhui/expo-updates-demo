{
  "name": "lerna-yarn-workspace-demo",
  "private": "true",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "react-native": "0.67.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/jest": "^26.0.23",
    "@types/react-native": "^0.66.15",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.14.0",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.66.2",
    "react-test-renderer": "17.0.2",
    "typescript": "^4.4.4"
  },
  "scripts": {
    "reset": "find . -type dir -name node_modules | xargs rm -rf && rm -rf yarn.lock",
    "pods": "yarn pod",
    "pod": "(cd packages/sl-core/ios && bundle config set path 'vendor/bundle' && bundle install && bundle exec pod install --repo-update)",
    "start": "yarn workspace sl-core start",
    "restart": "yarn workspace sl-core start-reset-cache",
    "ios": "(cd packages/sl-core && yarn ios)",
    "ios-13pm": "yarn workspace sl-core react-native run-ios --simulator \"iPhone 13 Pro Max\"",
    "xcode": "open packages/sl-core/ios/BooklnSaas.xcworkspace",
    "expo-start": "yarn workspace sl-core expo-start",
    "expo-restart": "yarn workspace sl-core expo-start-reset-cache",
    "build:ios": "react-native bundle --entry-file='./packages/sl-core/index.js' --bundle-output='./packages/sl-core/ios/main.jsbundle' --dev=false --platform='ios' --assets-dest='./packages/sl-core/ios'",
    "expo-export-ios": "yarn workspace sl-core expo-export-ios",
    "expo-export-android": "yarn workspace sl-core expo-export-android"
  }
}
